{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "extends": "@tsconfig/node14/tsconfig.json",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".eslintrc"]
}
